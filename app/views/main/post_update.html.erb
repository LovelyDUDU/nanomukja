<form action="/post_update_ok" method="post" enctype="multipart/form-data" id="write-form">
  <input type="hidden" name="post_lat" value="<%=current_user.latitude%>">
  <input type="hidden" name="post_long" value="<%=current_user.longitude%>">
  <input type="hidden" name="post_id" value="<%=@post.id%>">
  <div class = 'container'>
    <div class='row'>
      <div class = 'col-md-6 col-sm-12'> 
        <div class ="row">
          <div class= 'col-lg-6 col-xs-12'>
            <div class="input-group input-group-lg">
              <span class="input-group-addon" id="basic-addon1">제목</span>
              <input type="text" class="form-control" aria-describedby="basic-addon1" name="name" value="<%=@post.name%>" readonly> 
            </div>   
          </div>
          <div class= 'col-lg-6 col-xs-12'> 
              <div class="input-group input-group-lg">
                <span class="input-group-addon">종류</span>
                <select class="form-control" name="category">
                  <option value="korean">한식</option>
                  <option value="chinese">중식</option>
                  <option value="japanese">일식</option>
                  <option value="american">양식</option>
                  <option value="dessert">디저트</option>
                  <option value="etc">기타</option>
                </select> 
            </div> 
          </div> 
        </div> 
        <hr>
         <div class="input-group input-group-lg">
          <span class="input-group-addon">내용</span>
          <textarea class="form-control" rows="8" name="content" style ="height:200px" required><%=@post.content%></textarea>     
        </div> 
        <hr>
        <div class='row'>
          <div class="col-lg-6 col-xs-6">
            <div class="input-group input-group-lg">
              <span class="input-group-addon">총가격</span>
              <input type="number" class="form-control" name="total_price" id = "total_price" min=1 value="<%=@post.total_price%>" required>
            </div>
          </div>   
          <div class='col-lg-6 col-xs-6'>
            <div class="input-group input-group-lg ">
              <span class="input-group-addon">인원수</span>
              <input type="number" class="form-control" name="people_num" id = "people_num" min=1 value="<%=@post.people_num%>"required> 
            </div>
           
          </div>   
        </div> 
        
        <div class='row'>
          <div class="col-lg-12 col-xs-12">
             <div class="input-group input-group-lg">
              <span class="input-group-addon" id="basic-addon1">마감일</span>
              <input type="date" class="form-control" name="final_date" value="<%=@post.final_date%>" required>
            </div>
          </div> 
        </div>
        <hr class="visible-xs">
    </div>
    
      <div class="col-md-6 col-sm-12">
        <div class="input-group">
          <span class="input-group-addon">사진</span> 
            <img id="blah" src="<%=@food_photo%>" alt="your image" width="100%" height="350" > 
        </div>
        <div class='col-md-6 col-md-offset-6 col-xs-12'>
          <div class="filebox"style="text-align:right">
                <label for="imgInp" style="font-size:24px">사진 찾아보기</label> 
                <input type="file" id="imgInp" class="upload" accept="image/*" name="food_photo"/>
          </div>
        </div>
        <hr class="visible-xs">
        <div class='col-md-3 col-md-offset-9 col-xs-12'>
          <input type="submit" class="btn" value="수정" style ="width:100%;font-size:20px;background-color:#70afc6;color:white;">
          <!--<button type="button" id= "submit-btn" value="등록" class="btn btn-primary" onclick="submitBtn();"></button>-->
        </div>
      </div>  
    </div>
  </div>
</form>